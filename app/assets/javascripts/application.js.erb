$( document ).ready(function() {
	
	$("#reset").on("click", function () {
	    $("#search").val("");
	    $("#search_button").click();
	  });
	    
	$('#textarea_mas').keypress(function(e){
	  if(e.which == 13){
	    $(this).parents('form').submit();
	  }
	});

	jQuery(function(){
        jQuery('.stat').click(function(){
              jQuery('.stata').hide();
              var id = $(this).attr('id');
              jQuery('.' + id).show();

              var element = document.getElementById(id);
              $("i.stat").removeClass("active");
              $(element).addClass("active");
        });
  });
  
});

