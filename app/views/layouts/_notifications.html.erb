<% if @notifications.any? %>
	<div class="notification scrollable-menu">
		<% @notifications.each do |notification| %>
			<div style="padding-left: 8%;padding-right: 8%;">
				<%= link_to profile_path(notification.author), :class => "linkto" do %>
					<%= notification.event %> 
                <% end %>
                <%= time_ago_in_words(notification.created_at) %> ago
			</div>
			<hr>
    	<% end %>
	</div>
	
	<div class="col-lg-12">
    	<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      notification_path(@notifications),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-md btn-danger buttonmob',
                      :style => 'margin-left:29%' %>
	</div>
<% else %>
	<div class="notification">
		<h4 style="text-align: center;">Notifications is clear</h4>
	</div>
<% end %>