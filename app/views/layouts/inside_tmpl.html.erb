<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <title><%= content_for?(:title) ? yield(:title) : "CarSoft" %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag "application", :media => "all" %>

    <%= javascript_include_tag "application" %>
    <!--  Fonts and icons     -->
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link href="assets/css/themify-icons.css" rel="stylesheet">

</head>
<body>

<div class="wrapper">
    <div class="sidebar" data-background-color="white" data-active-color="danger">

      <div class="sidebar-wrapper">
            <div class="logo">
                <a href="" class="simple-text">
                    Natan
                </a>
            </div>

            <ul class="nav">
                <% if current_page?(root_path) %>
                    <li class="active">
                <% else %>
                    <li>
                <% end %>
                    <%= link_to(root_path) do %>
                        <i class="ti-panel"></i>
                        <p>Dashboard</p>
                    <% end %>
                </li>
                <% if current_page?(details_path) %>
                    <li class="active">
                <% else %>
                    <li>
                <% end %>
                    <%= link_to(details_path) do %>
                        <i class="ti-view-list-alt"></i>
                        <p>Details</p>
                    <% end %>
                </li>
                <% if current_page?(orders_path) %>
                    <li class="active">
                <% else %>
                    <li>
                <% end %>
                    <%= link_to(orders_path) do %>
                        <i class="ti-clipboard"></i>
                        <p>Orders</p>
                    <% end %>
                </li>
            </ul>
      </div>
    </div>

    <div class="main-panel">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar bar1"></span>
                        <span class="icon-bar bar2"></span>
                        <span class="icon-bar bar3"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="ti-bell"></i>
                                    <p class="notification"><%= @notifications.count %></p>
                                    <p>Notifications</p>
                                    <b class="caret"></b>
                              </a>
                                <ul class="dropdown-menu" style="margin-right: 5px; margin-left: 5px">
                                    <%= render "layouts/notifications" %>
                                </ul>
                        </li>
                        <li>
                            <a href="#">
                                <i class="ti-settings"></i>
                                <p>Settings</p>
                            </a>
                        </li>
                        <li style="color:grey;padding-top: 8px">
                  <div class="col-lg-12 link">
                    <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn btn-primary" %> 
                  </div>
              </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <%= bootstrap_flash %>
                    <%= yield %>
                </div>
            </div>
        </div>


        <footer class="footer">
            <div class="container-fluid">
                <div class="copyright pull-right">
                    &copy; 2018
                </div>
            </div>
        </footer>

    </div>
</div>


</body>

