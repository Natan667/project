  <div class="row">
    <div class="col-md-8 col-lg-offset-1 col-lg-6">
      <div class="profiledetail">
          <div class="row row-margin-bottom">
            <div class="col-lg-11 no-padding col-centered margin" data-category="view">
                <div class="lib-panel row box-shadow">
                  <div class="card w-75">
                    <div class="card-block">
                      <div class="col-lg-12 col-sm-12 col-xs-12 col-md-12" >
                        <h4 class="card-text" style="text-indent: 20px">
                          <%= simple_format(@detail.description) %></h4>
                      </div>
                    </div>
                  </div>
            </div>
            </div>
              </div>
          </div>
    <div style="padding-bottom: 30px ">
      <% if current_user == @detail.author %>
        <%= link_to t('.back', :default => t("helpers.links.back")),
              request.referrer , :class => 'btn btn-lg btn-default'  %>
      <% else %>
        <%= link_to t('.back', :default => t("helpers.links.back")),
                      root_path, :class => 'btn btn-lg btn-default' %>
      <% end %>

      <% if current_user == @detail.author %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_detail_path(@detail), :class => 'btn btn-lg btn-default' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              detail_path(@detail),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-lg btn-danger' %>
              <% end %>
   </div>
</div>