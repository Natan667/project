<div class="row">
    <h2 style="margin-left: 3% ">Order info</h2>
    <hr>
      <div class="col-md-8 col-lg-offset-3 col-lg-6">
        <div class="card w-75">
            <div class="card-block">

              <form class="form-horizontal">
                  <fieldset disabled="disabled">
                      <div class="form-group">
                          <label class="control-label col-xs-2">Title</label>
                          <div class="col-xs-10">
                            <%= @order.title %>
                          </div>
                      </div>

                      <div class="form-group">
                          <label class="control-label col-xs-2">Car</label>
                          <div class="col-xs-10">
                            <%= @order.car %>
                          </div>
                      </div>

                      <div class="form-group">
                          <label class="control-label col-xs-2">Name</label>
                          <div class="col-xs-10">
                            <%= @order.name %>
                          </div>
                      </div>

                      <% if @order.details.any? %>
                        <% @order.details.each do |detail| %>
                          <div class="form-group">
                              <label class="control-label col-xs-2">Detail</label>
                              <div class="col-xs-10">
                                <%= detail.title %>
                              </div>
                          </div>
                        <% end %>
                      <% else %>
                        <div class="form-group">
                          <label class="control-label col-xs-2">Detail</label>
                          <div class="col-xs-10">
                            No details
                          </div>
                        </div>
                      <% end %>

                      <div class="form-group">
                          <label class="control-label col-xs-2">Description</label>
                          <div class="col-xs-10">
                            <%= @order.description %>
                          </div>
                      </div>
                  </fieldset>
              </form>

          </div>
        </div>
      </div>
    </div>
  <div class="row">
    <div class="col-md-8 col-lg-offset-1 col-lg-6">

      <% if current_user == @order.author %>
        <%= link_to t('.back', :default => t("helpers.links.back")),
              request.referrer , :class => 'btn btn-lg btn-default'  %>
      <% else %>
        <%= link_to t('.back', :default => t("helpers.links.back")),
                      root_path, :class => 'btn btn-lg btn-default' %>
      <% end %>

      <% if current_user == @order.author %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_order_path(@order), :class => 'btn btn-lg btn-default' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              order_path(@order),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-lg btn-danger' %>
              <% end %>
</div>
</div>